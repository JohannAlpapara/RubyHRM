<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Education Levels</h1>
    </div>
</div>

<div class="panel panel-default">
	<div class="panel-heading"><i class="fa fa-language fa-fw"></i> Education Levels</div>
	<div class="panel-body">
		<%= link_to new_education_level_path, :class => "btn btn-success" do %>
			<i class="fa fa-plus fa-fw"></i> Add New Education Level
		<% end %>
		<br/><br/>
		<% if @education_levels.empty? %>
			<p>There were no results found.</p>
		<% else %>	
			<div class="table-responsive">
				<table class="table table-striped table-bordered table-hover">
					<thead>
						<tr>
							<th>Education Level Description</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @education_levels.each do |el| %>
							<tr>
								<td><%= el.education_level_description %></td>
								<td>
									<%= link_to edit_education_level_path(el.id), :class => "btn btn-warning btn-xs" do %>
										<i class="fa fa-pencil fa-fw"></i> <%= t('button.edit') %>
									<% end %>	
									<%= link_to education_level_path(el.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs" do %>
										<i class="fa fa-trash-o fa-fw"></i> <%= t('button.delete') %>
									<% end %>	
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		<% end %>
	</div>
</div>