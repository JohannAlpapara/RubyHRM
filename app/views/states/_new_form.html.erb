<%= form_for @state, :html => { :class => 'form-horizontal'}  do |f| %>
	<div class="form-group">
		<%= f.label "Country", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.collection_select :country_id, Country.all, :id, :description, { :include_blank => "Select Country" }, { :class => 'form-control' } %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "State Code", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :state_code, :class => 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Description", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :description, :class => 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-offset-2 col-lg-10">
			<%= button_tag(:class => 'btn btn-success') do %>
				<span class="fa fa-save fa-fw"></span> <%= t('button.save') %>
			<% end %>
		</div>
	</div>
<% end %>