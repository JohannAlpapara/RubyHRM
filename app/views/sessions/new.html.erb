<div class="login-panel panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">Sign In</h3>
	</div>
	<div class="panel-body">
		<%= form_for(:session, url: login_path, :html => {:class => 'form-signin' }) do |f| %>
			<fieldset>
				<div class="form-group">
					<%= f.text_field :username, :class => 'form-control', :placeholder => 'username' %>
				</div>
				<div class="form-group">
					<%= f.password_field :password, :class => 'form-control', :placeholder => 'password' %>
				</div>
				<div class="checkbox">
					<label>
						<%= check_box_tag :remember_me, 1, params[:remember_me] %> Remeber me?
					</label>
				</div>
				<%= f.submit "Login", :class => 'btn btn-success btn-block' %><br/>
				<p><%= link_to "Forgot password?", new_password_reset_path %></p>
			</fieldset>
		<% end %>
	</div>
</div>

