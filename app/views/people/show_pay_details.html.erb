<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Pay Details</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<%= render 'person_details_nav' %>

<div class="row">
	<div class="col-lg-12">	
		<div class="panel with-nav-tabs panel-default">
			<div class="panel-heading">
				<%= render 'person_tab_navigation' %>
			</div>	
			<div class="panel-body">
				<%= link_to new_pay_detail_path(:person_id => @person.id), :class => 'btn btn-success' do %>
					<i class="fa fa-plus fa-fw"></i>  Add Pay Component
				<% end %>
				<br/><br/>
				<div class="table-responsive">
					<table class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th>Pay Component</th>
								<th>pay rate</th>
								<th>Pay Frequency</th>
								<th>Currency</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<% @person.pay_details.each do |pd| %>
							<tr>
								<td><%= pd.component_name %></td>
								<td><%= pd.pay_rate %></td>
								<td><%= pd.pay_frequency %></td>
								<td><%= pd.currency_code %></td>
								<td>
									<%= link_to pay_detail_path(pd.id), :class => "btn btn-success btn-xs" do %>
										<i class="fa fa-search fa-fw"></i> View
									<% end %>
									<%= link_to pay_detail_path(pd.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs" do %>
										<i class="fa fa-trash-o fa-fw"></i> Delete
									<% end %>
								</td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>