<%= form_for @person, :html => { :class => 'form-horizontal'} do |f| %>
	<div class="form-group">
		<%= f.label "First Name", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :first_name, :class => 'form-control', :disabled => true %>
		</div>
		<%= f.label "Middle Name", :class => 'col-lg-3 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :middle_name, :class => 'form-control', :disabled => true %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Last Name", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :last_name, :class => 'form-control', :disabled => true %>
		</div>
		<%= f.label "Suffix", :class => 'col-lg-3 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :name_suffix, :class => 'form-control', :disabled => true %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Preferred Name", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :preferred_first, :class => 'form-control', :disabled => true %>
		</div>
	</div>
	
	<div class="form-group"></div>
	<div class="form-group"></div>

	<div class="form-group">
		<%= f.label "National ID (SSN)", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :national_id, :class => 'form-control', :disabled => true %>
		</div>
		<%= f.label "Date of Birth", :class => 'col-lg-3 control-label' %>
		<div class="col-lg-3">
			<%= f.date_field :date_of_birth, :class => 'form-control', :disabled => true %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Gender", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :gender, :class => 'form-control', :disabled => true %>
		</div>
		<%= f.label "Marital Status", :class => 'col-lg-3 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :marital_status, :class => 'form-control', :disabled => true %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Nationality", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :nationality, :class => 'form-control', :disabled => true %>
		</div>
	</div>

	<div class="form-group"></div>
	<div class="form-group"></div>

	<div class="form-group">
		<%= f.label "Military Status", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :military_status, :class => 'form-control', :disabled => true %>
		</div>
		<%= f.label "Smoker?", :class => 'col-lg-3 control-label' %>
		<div class="col-lg-3">
			<div class="checkbox">
				<label>
					<%= f.check_box :smoker, :disabled => true %>
				</label>
			</div>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Ethnicity", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :ethnicity, :class => 'form-control', :disabled => true %>
		</div>
		<%= f.label "Disabled?", :class => 'col-lg-3 control-label' %>
		<div class="col-lg-3">
			<div class="checkbox">
				<label>
					<%= f.check_box :disabled, :disabled => true %>
				</label>
			</div>
		</div>
	</div>

	<div class="form-group">
		<div class="form-footer">
			<div class="form-footer-container">
				<div class="col-lg-12">
					<%= link_to edit_person_path(@person), :class => 'btn btn-warning'  do %>
						<i class="fa fa-pencil"></i> <%= t('button.edit') %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
<% end %>