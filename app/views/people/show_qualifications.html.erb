<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Employees</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<%= render 'person_details_nav' %>

<div class="row">
	<div class="col-lg-12">	
		<div class="panel with-nav-tabs panel-default">
			<div class="panel-heading">
				<%= render 'person_tab_navigation' %>
			</div>	
			<div class="panel-body">
				<div class="row">
					<div class="col-lg-3">
						<div class="panel panel-default">
							<div class="panel-heading" style="padding:10px 15px;">
								<span class="panel-title">Skills</span>
								<span class="pull-right">
									<%= link_to new_person_skill_path(:person_id => @person.id), :class => 'btn btn-success btn-sm' do %>
										<i class="fa fa-plus fa-fw"></i>
									<% end %>
								</span>
								<div class="clearfix"></div>
							</div>
							<div class="panel-body">
								<% @person.person_skills.each do |ps| %>
									<%= ps.skill_id %>
								<% end %>
							</div>
						</div>
					</div>
					<div class="col-lg-3">
						<div class="panel panel-default">
							<div class="panel-heading" style="padding:10px 15px;">
								<span class="panel-title">Certifications</span>
								<span class="pull-right">
									<%= link_to new_person_certification_path(:person_id => @person.id), :class => 'btn btn-success btn-sm' do %>
										<i class="fa fa-plus fa-fw"></i>
									<% end %>
								</span>
								<div class="clearfix"></div>
							</div>
							<div class="panel-body">
								<% @person.person_certifications.each do |pc| %>
									<%= pc.certification_id %>
								<% end %>
							</div>
						</div>
					</div>
					<div class="col-lg-3">
						<div class="panel panel-default">
							<div class="panel-heading" style="padding:10px 15px;">
								<span class="panel-title">Education</span>
								<span class="pull-right">
									<%= link_to new_person_education_path(:person_id => @person.id), :class => 'btn btn-success btn-sm' do %>
										<i class="fa fa-plus fa-fw"></i>
									<% end %>
								</span>
								<div class="clearfix"></div>
							</div>
							<div class="panel-body">
								<% @person.person_educations.each do |pe| %>
									<%= pe.education_level_id %>
								<% end %>
							</div>
						</div>
					</div>
					<div class="col-lg-3">
						<div class="panel panel-default">
							<div class="panel-heading" style="padding:10px 15px;">
								<span class="panel-title">Languages</span>
								<span class="pull-right">
									<%= link_to new_person_language_path(:person_id => @person.id), :class => 'btn btn-success btn-sm' do %>
										<i class="fa fa-plus fa-fw"></i>
									<% end %>
								</span>
								<div class="clearfix"></div>
							</div>
							<div class="panel-body">
								<% @person.person_languages.each do |pl| %>
									<%= pl.language_id %>
								<% end %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
