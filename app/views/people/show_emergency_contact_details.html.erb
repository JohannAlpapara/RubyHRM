<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Emergency Contacts</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<%= render 'person_details_nav' %>


<div class="row">
	<div class="col-lg-12">	
		<div class="panel with-nav-tabs panel-default">
			<div class="panel-heading">
				<%= render 'person_tab_navigation' %>
			</div>	
			<div class="panel-body">
				<%= link_to new_emergency_contact_path(:person_id => @person.id), :class => 'btn btn-success' do %>
					<i class="fa fa-plus fa-fw"></i> Add Emergency Contact
				<% end %>
				<br/><br/>
				<div class="table-responsive">
					<table class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th>Name</th>
							</tr>
						</thead>
						<tbody>
							<% @person.emergency_contacts.each do |ec| %>
							<tr>
								<td><%= ec.name %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
