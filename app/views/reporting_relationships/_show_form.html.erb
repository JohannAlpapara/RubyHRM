<%= form_for [@person, @reporting_relationship], :html => { :class => 'form-horizontal'} do |f| %>
	<%= f.hidden_field :person_id, :value => params[:person_id] %>
	<div class="form-group">
		<%= f.label "Manager", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.collection_select :manager_id, Person.all, :id, :full_name, { :include_blank => "Select Manager" }, { :class => 'form-control', :disabled => true  } %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label "Reporting Type", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.select :reporting_type, options_for_select(["Direct", "Indirect", "Temporary"], :selected => f.object.reporting_type ), {:prompt => 'Select'}, { :class => 'form-control', :disabled => true } %>
		</div>
	</div>
	<div class="form-group">
		<div class="form-footer">
			<div class="form-footer-container">
				<div class="col-lg-12">
					<%= link_to edit_person_reporting_relationship_path(@person, @reporting_relationship.id), :class => 'btn btn-warning' do %>
						<i class="fa fa-pencil fa-fw"></i> <%= t('button.edit') %>
					<% end %>
					<%= link_to person_reporting_relationships_path(@person), :class => 'btn btn-default' do %>
						<i class="fa fa-arrow-left fa-fw"></i> <%= t('button.return_to_search') %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
<% end %>