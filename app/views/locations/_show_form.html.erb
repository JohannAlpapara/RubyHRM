<%= form_for @location, :html => { :class => 'form-horizontal'}  do |f| %>
	<div class="form-group">
		<%= f.label "Location Name", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :name, :class => 'form-control', :disabled => true %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Country", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.collection_select :country, Country.all, :country_code, :description, {:include_blank => 'Select Country'}, { :class => 'form-control', :disabled => true } %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Address Line 1", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :address_line1, :class => 'form-control', :disabled => true  %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Address Line 2", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :address_line2, :class => 'form-control', :disabled => true  %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "City", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :city, :class => 'form-control', :disabled => true  %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Province/State", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.grouped_collection_select :province, Country.all, :states, :description, :state_code, :description, {:include_blank => 'Select State'}, { :class => 'form-control', :disabled => true } %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Email Address", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.email_field :email_address, :class => 'form-control', :disabled => true  %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Phone Number", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :phone_number, :class => 'form-control', :disabled => true  %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Fax Number", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :fax_number, :class => 'form-control', :disabled => true  %>
		</div>
	</div>
	<div class="form-group">
		<div class="form-footer">
			<div class="form-footer-container">
				<div class="col-lg-12">
					<%= link_to edit_location_path(@location), :class => 'btn btn-warning'  do %>
						<i class="fa fa-pencil"></i> <%= t('button.edit') %>
					<% end %>
					<%= link_to locations_path, :class => 'btn btn-success'  do %>
						<i class="fa fa-arrow-left"></i> <%= t('button.return_to_search') %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
<% end %>