<%= form_for @location, :html => { :class => 'form-horizontal'}  do |f| %>
	<div class="form-group">
		<%= f.label "Location Name", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :name, :class => 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Country", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.collection_select :country, Country.all, :country_code, :description, {:include_blank => 'Select Country'}, { :class => 'form-control'} %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Address Line 1", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :address_line1, :class => 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Address Line 2", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :address_line2, :class => 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "City", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :city, :class => 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Province/State", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.grouped_collection_select :province, Country.all, :states, :description, :state_code, :description, {:include_blank => 'Select State'}, { :class => 'form-control'} %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Email Address", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.email_field :email_address, :class => 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Phone Number", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :phone_number, :class => 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Fax Number", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :fax_number, :class => 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<div class="form-footer">
			<div class="form-footer-container">
				<div class="col-lg-12">
					<%= button_tag(:type => "submit", :class => "btn btn-success") do %>
						<span class="fa fa-save fa-fw"></span> <%= t('button.save') %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
<% end %>