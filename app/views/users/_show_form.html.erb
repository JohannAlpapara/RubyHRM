<%= form_for @user, :html => { :class => 'form-horizontal'} do |f| %>
	<div class="form-group">
		<%= f.label "Username", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-2">
			<%= f.text_field :username, :class => 'form-control', :disabled => true  %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Language Preference", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-2">
			<%= f.collection_select :locale, SystemLanguage.all, :language_code, :language_description, { :include_blank => "Select Language" }, { :class => 'form-control', :disabled => true } %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Role", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-2">
			<%= f.select :role, options_for_select([["Manager","manager"],["Employee","employee"],["Administrator","admin"]], :selected => f.object.role ), {:prompt => 'Select'}, { :class => 'form-control', :disabled => true }  %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Employee", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-2">
			<%= f.collection_select :person_id, Person.all, :id, :full_name, { :include_blank => "Select Employee" }, { :class => 'form-control', :disabled => true }   %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Email", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-2">
			<%= f.text_field :email, :class => 'form-control', :disabled => true %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-offset-2 col-lg-10">
			<%= link_to edit_user_path(@user), :class => 'btn btn-warning'  do %>
				<i class="fa fa-pencil fa-fw"></i> <%= t('button.edit') %>
			<% end %>
			<%= link_to users_path, :class => 'btn btn-success'  do %>
				<i class="fa fa-arrow-left"></i> <%= t('button.return_to_search') %>
			<% end %>
		</div>
	</div>
<% end %>