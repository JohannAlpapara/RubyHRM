<%= form_for [@person, @dependent], :html => { :class => 'form-horizontal'}  do |f| %>
	<%= f.hidden_field :person_id, :value => @person_id %>
	<div class="form-group">
		<%= f.label "Name", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :name, :class => 'form-control', :disabled => true  %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Relationship", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.collection_select :relationship, Relationship.all, :description, :description,  {:include_blank => 'Select Relationship'}, { :class => 'form-control', :disabled => true } %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Date of Birth", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.date_field :date_of_birth, :class => 'form-control', :disabled => true %>
		</div>
	</div>
	<div class="form-group">
		<div class="form-footer">
			<div class="form-footer-container">
				<div class="col-lg-12">
					<%= link_to edit_person_dependent_path(@person, @dependent.id), :class => 'btn btn-warning' do %>
						<i class="fa fa-pencil fa-fw"></i> <%= t('button.edit') %>
					<% end %>
					<%= link_to person_dependents_path(@person), :class => 'btn btn-default' do %>
						<i class="fa fa-arrow-left fa-fw"></i> <%= t('button.return_to_search') %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
<% end %>