<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Dependents</h2>
    </div>
</div>

<%= render 'layouts/person_details' %>

<%= render 'layouts/person_tab_navigation' %>

<div class="row top15">
	<div class="col-lg-12">	
		<%= link_to new_person_dependent_path(@person), :class => 'btn btn-success' do %>
			<i class="fa fa-plus fa-fw"></i> <%= t('button.add_depenent') %>
		<% end %>
		<div class="top15">
			<% if @dependents.empty? %>
				<p>There were no results found.</p>
			<% else %>	
				<div class="table-responsive">
					<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th>Name</th>
								<th>Relationship</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<% @dependents.each do |d| %>
							<tr>
								<td><%= d.name %></td>
								<td><%= d.relationship %></td>
								<td>
									<%= link_to person_dependent_path(@person, d.id), :class => "btn btn-info btn-xs" do %>
										<i class="fa fa-search fa-fw"></i> <%= t('button.view') %>
									<% end %>
									<%= link_to edit_person_dependent_path(@person, d.id), :class => "btn btn-warning btn-xs" do %>
										<i class="fa fa-pencil fa-fw"></i> <%= t('button.edit') %>
									<% end %>
									<%= link_to person_dependent_path(@person, d.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs" do %>
										<i class="fa fa-trash-o fa-fw"></i> <%= t('button.delete') %>
									<% end %>
								</td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			<% end %>
		</div>
	</div>
</div>