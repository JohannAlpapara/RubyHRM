<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= t :DEPT01 %></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="panel panel-default">
	<div class="panel-heading"><i class="fa fa-th-list fa-fw"></i> Departments</div>
	<div class="panel-body">
		<%= link_to new_department_path, :class => "btn btn-success" do %>
			<i class="fa fa-plus fa-fw"></i> Add New Department
		<% end %>
		<br/><br/>
		<% if @departments.empty? %>
			<p>There were no results found.</p>
		<% else %>	
			<div class="table-responsive">
				<table class="table table-striped table-bordered table-hover">
					<thead>
						<tr>
							<th>Department Number</th>
							<th>Department Name</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @departments.each do |d| %>
						<tr>
							<td><%= d.department_number %></td>
							<td><%= d.name %></td>
							<td>
								<%= link_to department_path(d.id), :class => "btn btn-success btn-xs" do %>
									<i class="fa fa-search fa-fw"></i> View
								<% end %>
								<%= link_to edit_department_path(d.id), :class => "btn btn-warning btn-xs" do %>
									<i class="fa fa-pencil fa-fw"></i> Edit
								<% end %>
							</td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		<% end %>
	</div>
</div>
