<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= t('page_header.departments') %></h1>
    </div>
</div>

<div class="panel panel-default">
	<div class="panel-heading"><i class="fa fa-search fa-fw"></i> Search Departments</div>
	<div class="panel-body">
		<%= form_tag(departments_path, :method => "get", id: "search-form", :class => "form-horizontal") do %>
			<div class="form-group">
				<%= label_tag :search, "Name", :class => "col-lg-1 control-label" %>
				<div class="col-lg-2">
					<%= text_field_tag :search, params[:search], :placeholder => "Search Department Name", :class => "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-lg-offset-1 col-lg-2">
					<%= button_tag(:type => "submit", :name => nil, :class => "btn btn-default") do %>
						<span class="fa fa-search fa-fw"></span> <%= t('button.search') %>
					<% end %>
				</div>
			</div>
		<% end %>
	</div>
</div>

<div class="panel panel-default">
	<div class="panel-heading"><i class="fa fa-th-list fa-fw"></i> Departments</div>
	<div class="panel-body">
		<%= link_to new_department_path, :class => "btn btn-success" do %>
			<i class="fa fa-plus fa-fw"></i> Add New Department
		<% end %>
		<br/><br/>
		<% if @departments.empty? %>
			<p>There were no results found.</p>
		<% else %>	
			<div class="table-responsive">
				<table class="table table-striped table-bordered table-hover">
					<thead>
						<tr>
							<th>Department Number</th>
							<th>Department Name</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @departments.each do |d| %>
						<tr>
							<td><%= d.department_number %></td>
							<td><%= d.name %></td>
							<td>
								<%= link_to department_path(d.id), :class => "btn btn-success btn-xs" do %>
									<i class="fa fa-search fa-fw"></i> View
								<% end %>
								<%= link_to edit_department_path(d.id), :class => "btn btn-warning btn-xs" do %>
									<i class="fa fa-pencil fa-fw"></i> Edit
								<% end %>
							</td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		<% end %>
	</div>
</div>
