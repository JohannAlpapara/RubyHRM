<%= form_for @department, :html => { :class => 'form-horizontal'}  do |f| %>
	<div class="form-group">
		<%= f.label "Department Number", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :department_number, :class => 'form-control', :disabled => true %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Department Name", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :name, :class => 'form-control', :disabled => true %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Description", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_area :description, :class => 'form-control', :disabled => true %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-offset-2 col-lg-1">
			<%= link_to edit_department_path(@department), :class => 'btn btn-warning'  do %>
				<i class="fa fa-pencil fa-fw"></i> <%= t('button.edit') %>
			<% end %>
		</div>
		<div class="col-lg-1">
			<%= link_to departments_path, :class => 'btn btn-success'  do %>
				<i class="fa fa-arrow-left"></i> <%= t('button.return_to_search') %>
			<% end %>
		</div>
	</div>
<% end %>