<%= form_for @termination_reason, :html => { :class => 'form-horizontal'}  do |f| %>
	<div class="form-group">
		<%= f.label "Description", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :description, :class => 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<div class="form-footer">
			<div class="form-footer-container">
				<div class="col-lg-12">
					<%= f.submit :class => 'btn btn-success' do %>
						<span class="fa fa-save fa-fw"></span> <%= t('button.save') %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
<% end %>