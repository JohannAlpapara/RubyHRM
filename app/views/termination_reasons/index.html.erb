<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Termination Reasons</h1>
    </div>
</div>

<div class="panel panel-default">
	<div class="panel-heading"><i class="fa fa-language fa-fw"></i> Termination Reasons</div>
	<div class="panel-body">
		<%= link_to new_termination_reason_path, :class => "btn btn-success" do %>
			<i class="fa fa-plus fa-fw"></i> Add New Termination Reason
		<% end %>
		<br/><br/>
		<% if @termination_reasons.empty? %>
			<p>There were no results found.</p>
		<% else %>	
			<div class="table-responsive">
				<table class="table table-striped table-bordered table-hover">
					<thead>
						<tr>
							<th>Termination Reason</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @termination_reasons.each do |tr| %>
							<tr>
								<td><%= tr.description %></td>
								<td>
									<%= link_to edit_termination_reason_path(tr.id), :class => "btn btn-warning btn-xs" do %>
										<i class="fa fa-pencil fa-fw"></i> <%= t('button.edit') %>
									<% end %>	
									<%= link_to termination_reason_path(tr.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs" do %>
										<i class="fa fa-trash-o fa-fw"></i> <%= t('button.delete') %>
									<% end %>	
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		<% end %>
	</div>
</div>