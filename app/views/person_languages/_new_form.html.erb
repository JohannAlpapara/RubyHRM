<%= form_for @person_language, :html => { :class => 'form-horizontal'}  do |f| %>
	<%= f.hidden_field :person_id, :value => params[:person_id] %>
	<div class="form-group">
		<%= f.label "Language", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.collection_select :language_id, Language.all, :id, :language_description, { :include_blank => "Select Language" }, { :class => 'form-control' } %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Reading Proficiency", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :reading_proficiency, :class => 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Writing Proficiency", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :writing_proficiency, :class => 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Speaking Proficiency", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :speaking_proficiency, :class => 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-offset-1 col-lg-2">
			<%= button_tag(:class => 'btn btn-success') do %>
				<span class="fa fa-save fa-fw"></span> Save
			<% end %>
		</div>
	</div>
<% end %>