<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header"><%= t('page_header.search_results') %></h2>
    </div>
</div>

<div class="panel panel-default">
	<div class="panel-heading"><i class="fa fa-th-list fa-fw"></i> Search Results</div>
	<div class="panel-body">
		<% if @search_results.empty? %>
			<p>There were no results found. Please try refining your search.</p>
		<% else %>
			<% unless @people.empty? %>
				<div class="table-responsive">
					<table class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th>People</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<% @people.each do |p| %>
							<tr>
								<td><%= p.full_name %></td>
								<td>
									<%= link_to person_path(p.id), :class => "btn btn-success btn-xs" do %>
										<i class="fa fa-search fa-fw"></i> <%= t('button.view') %>
									<% end %>
									<%= link_to edit_person_path(p.id), :class => "btn btn-warning btn-xs" do %>
										<i class="fa fa-pencil fa-fw"></i> <%= t('button.edit') %>
									<% end %>
								</td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			<% end %>
			
			<% unless @users.empty? %>
				<div class="table-responsive">
					<table class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th>Users</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<% @users.each do |u| %>
							<tr>
								<td><%= u.username %></td>
								<td>
									<%= link_to user_path(u.id), :class => "btn btn-success btn-xs" do %>
										<i class="fa fa-search fa-fw"></i> <%= t('button.view') %>
									<% end %>
									<%= link_to edit_user_path(u.id), :class => "btn btn-warning btn-xs" do %>
										<i class="fa fa-pencil fa-fw"></i> <%= t('button.edit') %>
									<% end %>
								</td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			<% end %>
			
			<% unless @departments.empty? %>
				<div class="table-responsive">
					<table class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th>Departments</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<% @departments.each do |d| %>
							<tr>
								<td><%= d.name %></td>
								<td>
									<%= link_to department_path(d.id), :class => "btn btn-success btn-xs" do %>
										<i class="fa fa-search fa-fw"></i> <%= t('button.view') %>
									<% end %>
									<%= link_to edit_department_path(d.id), :class => "btn btn-warning btn-xs" do %>
										<i class="fa fa-pencil fa-fw"></i> <%= t('button.edit') %>
									<% end %>
								</td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			<% end %>

			<% unless @job_titles.empty? %>
				<div class="table-responsive">
					<table class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th>Job Titles</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<% @job_titles.each do |jt| %>
							<tr>
								<td><%= jt.job_title %></td>
								<td>
									<%= link_to job_title_path(jt.id), :class => "btn btn-success btn-xs" do %>
										<i class="fa fa-search fa-fw"></i> <%= t('button.view') %>
									<% end %>
									<%= link_to edit_job_title_path(jt.id), :class => "btn btn-warning btn-xs" do %>
										<i class="fa fa-pencil fa-fw"></i> <%= t('button.edit') %>
									<% end %>
								</td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			<% end %>
		<% end %>
	</div>
</div>
