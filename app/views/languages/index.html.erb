<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Languages</h1>
    </div>
</div>

<div class="panel panel-default">
	<div class="panel-heading"><i class="fa fa-language fa-fw"></i> Languages</div>
	<div class="panel-body">
		<%= link_to new_language_path, :class => "btn btn-success" do %>
			<i class="fa fa-plus fa-fw"></i> Add New Language
		<% end %>
		<br/><br/>
		<% if @languages.empty? %>
			<p>There were no results found.</p>
		<% else %>	
			<div class="table-responsive">
				<table class="table table-striped table-bordered table-hover">
					<thead>
						<tr>
							<th>Language Description</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @languages.each do |l| %>
							<tr>
								<td><%= l.language_description %></td>
								<td>
									<%= link_to edit_language_path(l.id), :class => "btn btn-warning btn-xs" do %>
										<i class="fa fa-pencil fa-fw"></i> <%= t('button.edit') %>
									<% end %>	
									<%= link_to language_path(l.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs" do %>
										<i class="fa fa-trash-o fa-fw"></i> <%= t('button.delete') %>
									<% end %>	
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		<% end %>
	</div>
</div>