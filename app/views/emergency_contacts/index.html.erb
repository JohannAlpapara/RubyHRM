<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Emergency Contacts</h1>
    </div>
</div>

<%= render 'layouts/person_details' %>

<%= render 'layouts/person_tab_navigation' %>

<div class="row top15">
	<div class="col-lg-12">	
		<%= link_to new_person_emergency_contact_path(@person), :class => 'btn btn-success' do %>
			<i class="fa fa-plus fa-fw"></i> Add Emergency Contact
		<% end %>
		<br/><br/>
		<% if @emergency_contacts.empty? %>
			<p>There were no results found.</p>
		<% else %>	
			<div class="table-responsive">
				<table class="table table-striped table-bordered table-hover">
					<thead>
						<tr>
							<th>Name</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @emergency_contacts.each do |ec| %>
						<tr>
							<td><%= ec.name %></td>
							<td>
								<%= link_to person_emergency_contact_path(@person, ec.id), :class => "btn btn-warning btn-xs" do %>
									<i class="fa fa-search fa-fw"></i> <%= t('button.view') %>
								<% end %>
								<%= link_to person_emergency_contact_path(@person, ec.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs" do %>
									<i class="fa fa-trash-o fa-fw"></i> <%= t('button.delete') %>
								<% end %>
							</td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		<% end %>
	</div>
</div>