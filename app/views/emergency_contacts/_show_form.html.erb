<%= form_for [@person, @emergency_contact], :html => { :class => 'form-horizontal'}  do |f| %>
	<%= f.hidden_field :person_id, :value => params[:person_id] %>
	<div class="form-group">
		<%= f.label "Contact Name", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :name, :class => 'form-control', :disabled => true %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Relationship", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.collection_select :relationship, Relationship.all, :description, :description,  {:include_blank => 'Select Relationship'}, { :class => 'form-control', :disabled => true } %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Home Phone", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :home_phone, :class => 'form-control', :disabled => true  %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Business Phone", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :business_phone, :class => 'form-control', :disabled => true  %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Mobile Phone", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :mobile_phone, :class => 'form-control', :disabled => true  %>
		</div>
	</div>
	<div class="form-group">
		<div class="form-footer">
			<div class="form-footer-container">
				<div class="col-lg-12">
					<%= link_to edit_person_emergency_contact_path(@person, @emergency_contact.id), :class => 'btn btn-warning' do %>
						<i class="fa fa-pencil fa-fw"></i> <%= t('button.edit') %>
					<% end %>
					<%= link_to person_emergency_contacts_path(@person), :class => 'btn btn-default' do %>
						<i class="fa fa-arrow-left fa-fw"></i> <%= t('button.return_to_search') %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
<% end %>