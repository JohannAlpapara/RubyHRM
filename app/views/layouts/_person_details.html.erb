<div class="row top15">
	<div class="col-lg-12">
		<div class="media">
			<div class="media-left media-middle">
				<%= image_tag @person.photo.url(:large), :class => "img-circle", :style => "border:10px solid #eee; transition: all 0.2s ease-in-out;"%>
			</div>
			<div class="media-body">
				<div class="row">
					<div class="col-lg-12">
						<h2 class="media-heading"><%= @person.full_name %></h2>
						<h4><%= @person.job_title.job_title unless @person.job_title.nil? %></h4>
        				<hr style="margin:8px auto">
        			</div>
        		</div>
        		<div class="row">
        			<div class="col-lg-4">
		        		<h5><strong>Employee ID:</strong> <%= @person.employee_id %></h5>
		        		<h5><span class="fa fa-phone fa-fw"></span> <%= @person.contact_detail.business_phone %></h5>
		        		<h5><span class="fa fa-envelope fa-fw"></span> <%= @person.contact_detail.business_email %></h5>
		        	</div>
		        	<div class="col-lg-8">
			        	<h5><strong>Department:</strong>  <%= @person.department.name unless @person.department.nil? %></h5>
			        	<h5><strong>Location:</strong> <%= @person.location.name unless @person.location.nil? %></h5>
			        	<h5><strong>Supervisor(s):</strong> <%= @person.reporting_relationships.map { |rr| rr.manager.full_name}.join(", ") %></h5>
		        	</div>
		        </div>
		        <div class="row">
		        	<div class="col-lg-12">
		        		<button type="button" class="btn btn-default btn-xs" data-toggle="modal" data-target="#upload-modal"><span class="fa fa-upload fa-fw"></span> Upload New Photo</button>
		        		
		        	</div>
		        </div>

		        <div class="modal fade" id="upload-modal">
				    <div class="modal-dialog modal-lg">
				        <div class="modal-content">
				            <div class="modal-header">
				                <button type="button" class="close" data-dismiss="modal"><span class="fa fa-times-circle"></span></button>
				                <h4 class="modal-title">Upload New Photo</h4>
				            </div>
				            <div class="modal-body">
				                <%= form_for @person, html: { :multipart => true, :class => 'form-inline' } do |f| %>
				        			<div class="form-group">
										<%= f.file_field :photo, :class => 'form-control' %>	
									</div>
									<%= button_tag(:type => "submit", :class => "btn btn-success") do %>
										<span class="fa fa-upload fa-fw"></span> <%= t('button.upload') %>
									<% end %>
				        		<% end %>
				            </div>
				        </div>
				    </div>
				</div>
			</div>
		</div>
	</div>
</div>