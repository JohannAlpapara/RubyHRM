<%= form_for @job_title, :html => { :class => 'form-horizontal'}  do |f| %>
	<div class="form-group">
		<%= f.label "Job Title", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :job_title, :class => 'form-control', :disabled => true %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Job Description", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_area :job_description, :class => 'form-control', :disabled => true %>
		</div>
	</div>
<% end %>