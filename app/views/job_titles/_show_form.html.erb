<%= form_for @job_title, :html => { :class => 'form-horizontal'}  do |f| %>
	<div class="form-group">
		<%= f.label "Job Title", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :job_title, :class => 'form-control', :disabled => true %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Job Description", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_area :job_description, :class => 'form-control', :disabled => true %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-offset-2 col-lg-10">
			<%= link_to edit_job_title_path(@job_title), :class => 'btn btn-warning'  do %>
				<i class="fa fa-pencil fa-fw"></i> <%= t('button.edit') %>
			<% end %>
			<%= link_to job_titles_path, :class => 'btn btn-success'  do %>
				<i class="fa fa-arrow-left"></i> <%= t('button.return_to_search') %>
			<% end %>
		</div>
	</div>
<% end %>