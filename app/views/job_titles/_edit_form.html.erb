<%= form_for @job_title, :html => { :class => 'form-horizontal'}  do |f| %>
	<div class="form-group">
		<%= f.label "Job Title", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :job_title, :class => 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Job Description", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_area :job_description, :class => 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-offset-2 col-lg-2">
			<%= button_tag(:type => "submit", :class => "btn btn-success") do %>
				<span class="fa fa-save fa-fw"></span> <%= t('button.save') %>
			<% end %>
		</div>
	</div>
<% end %>