<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Job Titles</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="panel panel-default">
	<div class="panel-heading"><i class="fa fa-th-list fa-fw"></i> Job Titles</div>
	<div class="panel-body">
		<%= link_to new_job_title_path, :class => "btn btn-success" do %>
			<i class="fa fa-plus fa-fw"></i> Add New Job Title
		<% end %>
		<br/><br/>
		<% if @job_titles.empty? %>
			<p>There were no results found.</p>
		<% else %>	
			<div class="table-responsive">
				<table class="table table-striped table-bordered table-hover">
					<thead>
						<tr>
							<th>Job Title</th>
							<th>Job Description</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @job_titles.each do |j| %>
						<tr>
							<td><%= j.job_title %></td>
							<td><%= j.job_description %></td>
							<td>
								<%= link_to job_title_path(j.id), :class => "btn btn-success btn-xs" do %>
									<i class="fa fa-search fa-fw"></i> View
								<% end %>
								<%= link_to edit_job_title_path(j.id), :class => "btn btn-warning btn-xs" do %>
									<i class="fa fa-pencil fa-fw"></i> Edit
								<% end %>
							</td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		<% end %>
	</div>
</div>