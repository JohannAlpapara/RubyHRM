<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Job Titles</h1>
    </div>
</div>

<div class="panel panel-default">
	<div class="panel-heading">
		<i class="fa fa-search fa-fw"></i> Search Job Titles&nbsp;&nbsp;&nbsp;<button type="button" class="btn btn-default btn-xs" data-toggle="collapse" data-target="#jobtitles">+</button>
	</div>
	<div id="jobtitles" class="panel-collapse collapse" >
		<div class="panel-body">
			<%= form_tag(job_titles_path, :method => "get", id: "search-form", :class => "form-inline") do %>
				<div class="form-group">
					<%= label_tag :search, "Job Title", :class => "control-label" %>
					<%= text_field_tag :search, params[:search], :placeholder => "Search Job Title", :class => "form-control" %>
				</div>
				<%= button_tag(:type => "submit", :name => nil, :class => "btn btn-default") do %>
						<span class="fa fa-search fa-fw"></span> <%= t('button.search') %>
				<% end %>
			<% end %>
		</div>
	</div>
</div>

<div class="row top15">
	<div class="col-lg-12">
		<%= link_to new_job_title_path, :class => "btn btn-success" do %>
			<i class="fa fa-plus fa-fw"></i> Add New Job Title
		<% end %>
		<div class="top15">
			<% if @job_titles.empty? %>
				<p>There were no results found.</p>
			<% else %>	
				<div class="table-responsive">
					<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th>Job Title</th>
								<th>Job Description</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<% @job_titles.each do |j| %>
							<tr>
								<td><%= j.job_title %></td>
								<td><%= j.job_description %></td>
								<td>
									<%= link_to job_title_path(j.id), :class => "btn btn-info btn-xs" do %>
										<i class="fa fa-search fa-fw"></i> View
									<% end %>
									<%= link_to edit_job_title_path(j.id), :class => "btn btn-warning btn-xs" do %>
										<i class="fa fa-pencil fa-fw"></i> Edit
									<% end %>
								</td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			<% end %>
		</div>
	</div>
</div>