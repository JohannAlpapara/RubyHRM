<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Job Titles</h2>
    </div>
</div>

<div class="row">
	<div class="col-lg-12">
		<a class="btn btn-default" role="button" data-toggle="collapse" href="#search"><i class="fa fa-search fa-fw"></i> Search Job Titles</a>

		<%= link_to new_job_title_path, :class => "btn btn-success" do %>
			<i class="fa fa-plus fa-fw"></i> Add New Job Title
		<% end %>

		<div id="search" class="collapse top15" >
			<div class="well well-sm">
				<%= form_tag(job_titles_path, :method => "get", id: "search-form", :class => "form-inline") do %>
					<div class="form-group">
						<%= text_field_tag :search, params[:search], :placeholder => "Search Job Title", :class => "form-control" %>
					</div>
					<%= button_tag(:type => "submit", :name => nil, :class => "btn btn-default") do %>
							<span class="fa fa-search fa-fw"></span> <%= t('button.search') %>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>

<div class="row top15">
	<div class="col-lg-12">
		<% if @job_titles.empty? %>
			<p>There were no results found.</p>
		<% else %>	
			<p><%= pluralize(@count.to_i, "result") %> found out of <%= @total_count.to_i %></p>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>Job Title</th>
							<th>Job Description</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @job_titles.each do |j| %>
						<tr>
							<td><%= j.job_title %></td>
							<td><%= j.job_description %></td>
							<td>
								<%= link_to job_title_path(j.id), :class => "btn btn-info btn-xs" do %>
									<i class="fa fa-search fa-fw"></i> View
								<% end %>
								<%= link_to edit_job_title_path(j.id), :class => "btn btn-warning btn-xs" do %>
									<i class="fa fa-pencil fa-fw"></i> Edit
								<% end %>
							</td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		<% end %>
	</div>
</div>