<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Pay Details</h1>
    </div>
</div>

<%= render 'layouts/person_details' %>

<%= render 'layouts/person_tab_navigation' %>

<div class="row top15">
	<div class="col-lg-12">	
		<%= link_to new_person_pay_detail_path(@person), :class => 'btn btn-success' do %>
			<i class="fa fa-plus fa-fw"></i>  <%= t('button.add_pay_component') %>
		<% end %>
		<div class="top15">
			<% if @pay_details.empty? %>
				<p>There were no results found.</p>
			<% else %>	
				<div class="table-responsive">
					<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th>Pay Component</th>
								<th>pay rate</th>
								<th>Pay Frequency</th>
								<th>Currency</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<% @pay_details.each do |pd| %>
							<tr>
								<td><%= pd.component_name %></td>
								<td><%= pd.pay_rate %></td>
								<td><%= pd.pay_frequency %></td>
								<td><%= pd.currency_code %></td>
								<td>
									<%= link_to person_pay_detail_path(@person, pd.id), :class => "btn btn-info btn-xs" do %>
										<i class="fa fa-search fa-fw"></i> <%= t('button.view') %>
									<% end %>
									<%= link_to edit_person_pay_detail_path(@person, pd.id), :class => "btn btn-warning btn-xs" do %>
										<i class="fa fa-pencil fa-fw"></i> <%= t('button.edit') %>
									<% end %>
									<%= link_to person_pay_detail_path(@person, pd.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs" do %>
										<i class="fa fa-trash-o fa-fw"></i> <%= t('button.delete') %>
									<% end %>
								</td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			<% end %>
		</div>
	</div>
</div>