<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Translations</h1>
    </div>
</div>

<div class="panel panel-default">
	<div class="panel-heading"><i class="fa fa-th-list fa-fw"></i> Translations</div>
	<div class="panel-body">
		<%= link_to new_translation_path, :class => "btn btn-success" do %>
			<i class="fa fa-plus fa-fw"></i> Add New Translation
		<% end %>
		<br/><br/>
		<% if @translations.empty? %>
			<p>There were no results found.</p>
		<% else %>	
			<div class="table-responsive">
				<table class="table table-striped table-bordered table-hover">
					<thead>
						<tr>
							<th>Locale</th>
							<th>Key</th>
							<th>Translation</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @translations.each do |t| %>
							<tr>
								<td><%= t.locale %></td>
								<td><%= t.key %></td>
								<td><%= t.value %></td>
								<td>
									<%= link_to edit_translation_path(t.id), :class => "btn btn-success btn-xs" do %>
										<i class="fa fa-search fa-fw"></i> Edit
									<% end %>
									<%= link_to translation_path(t.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs" do %>
										<i class="fa fa-trash-o fa-fw"></i>
									<% end %>	
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		<% end %>
	</div>
</div>