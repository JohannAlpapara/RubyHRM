<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Translations</h1>
    </div>
</div>

<div class="panel panel-default">
	<div class="panel-heading"><i class="fa fa-search fa-fw"></i> Search Translations</div>
	<div class="panel-body">
		<%= form_tag(translations_path, :method => "get", id: "search-form", :class => "form-horizontal") do %>
			<div class="form-group">
				<%= label_tag :search1, "Locale", :class => "col-lg-1 control-label" %>
				<div class="col-lg-2">
					<%= text_field_tag :search1, params[:search1], :class => "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<%= label_tag :search2, "Key or Value", :class => 'col-lg-1 control-label' %>
				<div class="col-lg-2">
					<%= text_field_tag :search2, params[:search2], :class => "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-lg-offset-1 col-lg-2">
					<%= submit_tag "Search", :name => nil, :class =>  "btn btn-default" %>
				</div>
			</div>
		<% end %>
	</div>
</div>

<div class="panel panel-default">
	<div class="panel-heading"><i class="fa fa-language fa-fw"></i> Translations</div>
	<div class="panel-body">
		<%= link_to new_translation_path, :class => "btn btn-success" do %>
			<i class="fa fa-plus fa-fw"></i> Add New Translation
		<% end %>
		<br/><br/>
		<% if @translations.empty? %>
			<p>There were no results found.</p>
		<% else %>
			<p><%= @count.to_i %> results found out of <%= @total_count.to_i %></p>	
			<div class="table-responsive">
				<table class="table table-striped table-bordered table-hover">
					<thead>
						<tr>
							<th>Locale</th>
							<th>Key</th>
							<th>Translation</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @translations.each do |t| %>
							<tr>
								<td><%= t.locale %></td>
								<td><%= t.key %></td>
								<td><%= t.value %></td>
								<td>
									<%= link_to edit_translation_path(t.id), :class => "btn btn-warning btn-xs" do %>
										<i class="fa fa-search fa-fw"></i> <%= t('button.edit') %>
									<% end %>
									<%= link_to translation_path(t.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs" do %>
										<i class="fa fa-trash-o fa-fw"></i> <%= t('button.delete') %>
									<% end %>	
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		<% end %>
	</div>
</div>