<%= form_for @translation, :html => { :class => 'form-horizontal'}  do |f| %>
	<div class="form-group">
		<%= f.label "Locale", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.collection_select :locale, SystemLanguage.all, :language_code, :language_description, { :include_blank => "Select Language" }, { :class => 'form-control' } %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Key", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :key, :class => 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Value", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_area :value, :class => 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<div class="form-footer">
			<div class="form-footer-container">
				<div class="col-lg-12">
					<%= button_tag(:type => "submit", :class => "btn btn-success") do %>
						<span class="fa fa-save fa-fw"></span> <%= t('button.save') %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
<% end %>