<%= form_for [@person, @contact_detail], :html => { :class => 'form-horizontal'} do |f| %>
	<%= f.hidden_field :person_id, :value => params[:person_id] %>
	<div class="form-group">
		<%= f.label "Country", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.collection_select :country, Country.all, :country_code, :description, {:include_blank => 'Select Country'}, { :class => 'form-control', :disabled => true } %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Address Line 1", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :address_line1, :class => 'form-control', :disabled => true  %>
		</div>
		<%= f.label "Address Line 2", :class => 'col-lg-3 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :address_line2, :class => 'form-control', :disabled => true  %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "City", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :city, :class => 'form-control', :disabled => true  %>
		</div>
		<%= f.label "State/Province", :class => 'col-lg-3 control-label' %>
		<div class="col-lg-3">
			<%= f.grouped_collection_select :state, Country.all, :states, :description, :state_code, :description, {:include_blank => 'Select State'}, { :class => 'form-control', :disabled => true} %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Postal Code", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :postal, :class => 'form-control', :disabled => true  %>
		</div>
	</div>
	
	<div class="form-group"></div>
	<div class="form-group"></div>

	<div class="form-group">
		<%= f.label "Home Phone", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :home_phone, :class => 'form-control', :disabled => true  %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Mobile Phone", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :mobile_phone, :class => 'form-control', :disabled => true  %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Business Phone", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.text_field :business_phone, :class => 'form-control', :disabled => true  %>
		</div>
	</div>

	<div class="form-group"></div>
	<div class="form-group"></div>

	<div class="form-group">
		<%= f.label "Home Email", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.email_field :home_email, :class => 'form-control', :disabled => true  %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label "Business Email", :class => 'col-lg-2 control-label' %>
		<div class="col-lg-3">
			<%= f.email_field :business_email, :class => 'form-control', :disabled => true  %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-lg-10 col-lg-offset-2">
			<%= link_to edit_person_contact_detail_path(@person, @person.id), :class => 'btn btn-warning' do %>
				<i class="fa fa-pencil fa-fw"></i> <%= t('button.edit') %>
			<% end %>
		</div>
	</div>
<% end %>